#:kivy 1.11
BoxLayout:
    orientation: 'vertical'
    TextInput:
        id: text_input
        multiline: True
        size_hint_y: 0.1
    BoxLayout:
        size_hint_y: 0.1
        height: 30
        Button:
            text: 'Press this button to paste your long code in Clipboard'
            size_hint_x: 0.8
            on_press: app.paste_from_clipboard()
        Button:
            text: 'Reset'
            size_hint_x: 0.2
            on_press: app.reset()
    Button:
        text: 'Split Code into Segments of ' + app.char_limit + ' Characters'
        size_hint_y: 0.1
        opacity: 0
        id: split_button
        on_press: app.split_text()
    ScrollView:
        size_hint_y:0.7
        id: scroll
        BoxLayout:
            orientation: 'vertical'
            id: scroll_layout
            scroll_y:1
